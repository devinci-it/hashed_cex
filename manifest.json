{
  "manifest_version": 3,
  "name": "Hashed",
  "version": "1.0",
  "description": "Calculate MD5, SHA1, and SHA256 hashes for downloaded files.",
  "icons": {
    "16": "icons/16.png",
    "48": "icons/48.svg",
    "100": "icons/100.png"
  },
  "action": {
    "default_icon": "icons/48.png",
    "default_popup": "popup/popup.html",
    "default_panel": "sidebar.html"
  },
  "permissions": [
    "storage",
    "downloads"
  ],
  "background": {
    "service_worker": "background.js"
  }
}
